//  https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:../database/dev.sqlite"
}

model User {
    id       Int    @id @default(autoincrement())
    name     String
    email    String @unique
    password String
    token    String @default("")

    characters Character[]
}

model Character {
    id           Int    @id @default(autoincrement())
    name         String
    race         String
    classe       String
    hp           Int
    mp           Int
    sp           Int
    experience   Int
    strength     Int
    agility      Int
    vitality     Int
    intelligence Int
    spirituality Int

    user    User @relation(fields: [user_id], references: [id])
    user_id Int
}
